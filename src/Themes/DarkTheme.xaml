<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Background Colors  -->
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#171718" />
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#1d1d1f" />

    <!--  Primary Colors  -->
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#5B7FFF" />
    <SolidColorBrush x:Key="PrimaryGrayColor" Color="#3d3d3d" />

    <!--  Secundary Colors  -->
    <SolidColorBrush x:Key="SecundaryBlueColor" Color="#232324" />
    <SolidColorBrush x:Key="SecundaryGrayColor" Color="#232324" />

    <!--  Typograhy Colors  -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#ffffff" />
    <SolidColorBrush x:Key="TextSecundaryColor" Color="#a7a7a7" />

    <!--  Icons Colors  -->
    <SolidColorBrush x:Key="ActionIconColor" Color="#f3f3f3" />
    <SolidColorBrush x:Key="ActionIconColorMouse" Color="#5cdd9c" />

</ResourceDictionary>